<h1>Lista Compradores</h1>
  <div class="container">
  <p>Aqui estan los compradores:</p>                                          
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>Index</th>
        <th>Nombre</th>
        <th>Direccion</th>
        <th>Telefono</th>
      </tr>
    </thead>
    <tbody>
      <% @buyers.each do |buyer| %>
        <tr>
          <td><%= buyer.id %></td>
          <td><%= buyer.Nombre %></td>
          <td><%= buyer.Direccion %></td>
          <td><%= buyer.Telefono %></td>
          <td><%= link_to 'Show', buyer %></td>
          <td><%= link_to 'Edit', edit_buyer_path(buyer) %></td>
          <td><%= link_to 'Destroy', buyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>
<%= link_to 'Nuevo Comprador', new_buyer_path, class: "btn btn-danger" %>
