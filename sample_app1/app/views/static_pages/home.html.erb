<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
    </aside>
  </div>
  <div class="center jumbotron">
    <h1>Bienvenido: </h1>
    <h2>
      Esta es tu la pagina principal
      <h3>
        Para empezar a trabajar puedes checar la tabla de ventas en el boton de abajo y asi registrar todo lo que vas haciendo.
        Recuerda que puedes checar en los otros menus los objetos que vendemos y algunos compradores comunes.
      </h3>
    </h2>
    <%= link_to "Tablas", buyers_path, class: "btn btn-lg btn-danger" %>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Bienvenido</h1>

    <h2>
      Esta es la pagina principal
      <h3>
        Si eres un usuario ingresa en log in, de lo contrario haz sign up.
      </h3>
    </h2>

    <%= link_to "Sign up", signup_path, class: "btn btn-lg btn-danger" %>
  </div>

  <%= link_to image_tag("tec.jpg", alt: "rand image") %>
<% end %>